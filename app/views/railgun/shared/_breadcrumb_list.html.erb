<ul class="breadcrumb">
	<% count = 1 %>
	<% breadcrumbs.each do |crumb| %>
	<li<%= " class=active" if count >= breadcrumbs.length %>>
	<a href="<%= url_for(crumb[:path]) %>"><%= crumb[:title] %></a>
	<% if count < breadcrumbs.length then %><span class="divider">/</span><% end %>
	</li>
	<% count+= 1 %>
	<% end %>
</ul>