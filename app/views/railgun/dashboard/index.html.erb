<div class="row-fluid">
	<% Railgun.resources.each_pair do |key, resource| %>				
	<div class="box-small span2">
		<a href="#" class="box-small-link" data-rel="tooltip" data-original-title="There are <%= resource.resource_class.all.count %> <%= resource.name.pluralize %>">
			<div id="members-count"><%= resource.resource_class.all.count %></div>
		</a>
		<div class="box-small-title"><%= resource.name.pluralize %></div>
	</div>
	<% end %>
</div>

<div class="row-fluid sortable">
	<div class="box span12">
		<div class="box-header">
			<h2><i class="icon-font"></i><span class="break"></span><%= title %></h2>
		</div>
		<div class="box-content">

			<div class="page-header">
			  <h1>Welcome to <small>Railgun..</small></h1>
			</div>   
		
		</div>
	</div>
</div>  