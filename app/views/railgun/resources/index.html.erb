<div id="resource_filters" class="row-fluid sortable">
	<div class="btn-toolbar pull-left">
		<div class="btn-group">
	    <a class="btn active" href="">All</a>
	    <a class="btn" href="">With caption</a>
	    <a class="btn" href="">Without caption</a>
	  </div>
	</div> 
	<form class="form-search pull-right">
		<div class="input-append">
	  	<input type="text" class="input-medium search-query" placeholder="Keywords">
	  	<button type="submit" class="btn">Search</button>
		</div>
	</form>
</div>
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-<%= railgun_resource.options[:icon] %>"></i><span class="break"></span><%= railgun_resource.name.pluralize %></h2>
			<div class="btn-toolbar">
				<div class="btn-group">
			    <a class="btn btn-small btn-info" href="<%= url_for([:new, railgun_resource.to_sym]) %>">Add New</a>
			  </div>
			</div>
			<div class="box-icon">
				<!--
				<a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				-->
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
			  <thead>
				  <tr>
				  	<% viewable_columns.each do |column| %>
    				<th><%= column.name.humanize %></th> 
    				<% end %>
					  <th>Actions</th>
				  </tr>
			  </thead>   
			  <tbody>
				  <% collection.all.each do |resource| %>
					<tr>
						<% viewable_columns.each do |column| %>
	  				<td><%= resource.try(column.name.to_sym) %></td> 
	  				<% end %>
						<td>
							<a class="btn btn-success" href="<%= url_for([resource]) %>">
								<i class="icon-info-sign icon-white"></i>  
							</a>
							<a class="btn btn-info" href="<%= url_for([:edit, resource]) %>">
								<i class="icon-pencil icon-white"></i>  
							</a>
							<%= link_to('<i class="icon-trash icon-white"></i>'.html_safe, resource, :method => :delete, :confirm => "Are you sure you want to delete this record?", :remote => true, :class => "btn btn-danger") %>
						</td>
					</tr>
					<% end %> 
			  </tbody>
		  </table>            
		</div>
	</div><!--/span-->

</div><!--/row-->
