<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-user"></i><span class="break"></span><%= railgun_resource.name.pluralize %></h2>
			<div class="box-icon">
				<a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
			  <thead>
				  <tr>
				  	<% viewable_columns.each do |column| %>
    				<th><%= column[:name].humanize %></th> 
    				<% end %>
					  <th>Actions</th>
				  </tr>
			  </thead>   
			  <tbody>
				  <% collection.all.each do |resource| %>
					<tr>
						<% viewable_columns.each do |column| %>
	  				<td class="center"><%= resource.try(column[:name].to_sym) %></td> 
	  				<% end %>
						<td class="center">
							<a class="btn btn-success" href="#">
								<i class="icon-zoom-in icon-white"></i>  
							</a>
							<a class="btn btn-info" href="<%= url_for([:edit, resource]) %>">
								<i class="icon-edit icon-white"></i>  
							</a>
							<a class="btn btn-danger" href="#">
								<i class="icon-trash icon-white"></i> 
							</a>
						</td>
					</tr>
					<% end %> 
			  </tbody>
		  </table>            
		</div>
	</div><!--/span-->

</div><!--/row-->
