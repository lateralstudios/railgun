<%= render :partial => "filters" %>
<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-<%= railgun_resource.options[:icon] %>"></i><span class="break"></span><%= railgun_resource.name.pluralize %></h2>
			<div class="btn-toolbar">
				<div class="btn-group">
			    <a class="btn btn-small btn-info" href="<%= url_for([:new, railgun_resource.to_sym]) %>">Add New</a>
			  </div>
			</div>
			<div class="box-icon">
				<!--
				<a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
				-->
			</div>
		</div>
		<div class="box-content">
			<table class="resource_listing table table-striped table-bordered bootstrap-datatable datatable">
			  <thead>
				  <tr>
				  	<% viewable_columns.each do |column| %>
    				<th><%= column.name.humanize %></th> 
    				<% end %>
					  <th>Actions</th>
				  </tr>
			  </thead>   
			  <tbody>
				  <% collection.each do |resource| %>
					<tr role="<%= resource.id %>">
						<% viewable_columns.each do |column| %>
	  				<td><%= short_format_column(resource, column) %></td> 
	  				<% end %>
						<td>
						<div class="btn-toolbar">
							<div class="btn-group">
								<a class="btn btn-small" href="<%= url_for([resource]) %>">
									View
								</a>
								<a class="btn btn-small" href="<%= url_for([:edit, resource]) %>">
									Edit
								</a>
							</div>
							<div class="btn-group">
								<%= link_to('Delete', resource, :method => :delete, :confirm => "Are you sure you want to delete this record?", :remote => true, :data => { :type => :json }, :class => "btn btn-danger btn-small resource-delete") %>
							</div>
						</div>
						</td>
					</tr>
					<% end %> 
			  </tbody>
		  </table>            
		</div>
	</div><!--/span-->
</div><!--/row-->
