<div class="row-fluid sortable">		
	<div class="box span12">
		<div class="box-header" data-original-title>
			<h2><i class="icon-<%= railgun_resource.options[:icon] %>"></i><span class="break"></span>View <%= railgun_resource.name %></h2>
			<div class="btn-toolbar">
				<div class="btn-group">	
					<%= link_to('Delete', resource, :method => :delete, :confirm => "Are you sure you want to delete this record?", :class => "btn btn-small btn-danger") %>
				</div>	
				<div class="btn-group">
			    <a class="btn btn-small btn-info" href="<%= url_for([:edit, resource]) %>">Edit</a>
			  </div>
			</div>
		</div>
		<div class="box-content">
			<h1><%= railgun_resource.name %> <%= resource.try(railgun_resource.name_column)%></h1>    
			<hr />   
			<% editable_columns.each do |column| %>
			<p><strong><%= column.name.humanize %>:</strong> <%= resource.send(column.name) %></p>
			<% end %>   
		</div>
	</div><!--/span-->

</div><!--/row-->
