<%= simple_form_for resource || collection.new, :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
	
	<% editable_columns.each do |column| %>
	<%= render :partial => "railgun/resources/fields/"+column[:type].to_s, :locals => {:form => f, :column => column, :resource => resource} %>
	<% end %>
	
	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
	  <button type="reset" class="btn">Cancel</button>
	</div>
  </fieldset>
<% end %>